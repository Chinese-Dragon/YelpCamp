<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        
        <div style="width: 40%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="campgroundData[name]" value="<%= campground.name %>" />
                </div>
                
                <div class="form-group">
                    <input type="text" class="form-control" name="campgroundData[image]" value="<%= campground.image %>">
                </div> 
                
                <div class="form-group">
                    <input type="number" class="form-control" name="campgroundData[price]" value="<%= campground.price %>" min="0.01" step="0.01">
                </div> 
                
                <div class="form-group">
                    <input type="text" class="form-control" name="campgroundData[description]" value="<%= campground.description %>">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update</button>
                </div>
            </form>
        </div>
 
            
    </div>
       
</div>


<% include ../partials/footer %>